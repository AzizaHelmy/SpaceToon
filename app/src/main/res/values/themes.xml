<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceToon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/abeezee</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TextInputLayout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/yellow_500</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>
    <!-- Circle image view -->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="cardImageStyle">
        <item name="cornerSize" > 8dp </item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="cardHeader">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:textColor">@color/black_500</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <style name="cardHeader.seeAllText">
        <item name="android:textColor">@color/black_200</item>
        <item name="drawableEndCompat">@drawable/icon_see_all</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="textStyle.Name">
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/text_name</item>
    </style>

    <style name="textStyle.Email">
        <item name="android:textColor">@color/black_200</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:text">@string/email</item>
    </style>

    <style name="textStyleEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/black_200</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textStyleEdit.Theme">
        <item name="android:text">@string/theme</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="iconeStyle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="dividerStyle">
        <item name="android:layout_margin">16dp</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow_500</item>
        <!-- Customize your theme here. -->
    </style>


</resources>