<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceToon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="textStyle.Name">
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/text_name</item>
    </style>

    <style name="textStyle.Email">
        <item name="android:textColor">@color/black_200</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:text">@string/email</item>
    </style>

    <style name="textStyleEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/black_200</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textStyleEdit.Theme">
        <item name="android:text">@string/theme</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="iconeStyle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="dividerStyle">
        <item name="android:layout_margin">16dp</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow_500</item>
        <!-- Customize your theme here. -->
    </style>


</resources>